<Page x:Class="MvvmLightSample.Views.PageFour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmLightSample.Views"
      mc:Ignorable="d"   Background="Gray"

      Title="PageFour">
    <Page.DataContext>
        <Binding Path="PageFour" Source="{StaticResource Locator}"></Binding>
    </Page.DataContext>
    <Grid>
        <TextBlock Text="4" Foreground="White" FontSize="30"></TextBlock>
        <Button  Content="Back" Command="{Binding GoBackCommand}" Width="60" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10"></Button>
    </Grid>
</Page>
